{
    "comments": {
      "lineComment": "%"
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["comment"] },
        { "open": "[", "close": "]", "notIn": ["comment"] },
        { "open": "(", "close": ")", "notIn": ["comment"] }
    ],
    "autoCloseBefore": ";.+",
    "surroundingPairs": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "folding": {
      "markers": {
        "start": "^\\s*\\w+\\s*=",
        "end": "^\\s*;"
      }
    }
  }